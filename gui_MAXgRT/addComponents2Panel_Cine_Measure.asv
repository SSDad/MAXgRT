%                                 'Style', 'togglebutton',...
%                                 'String', 'Tumor Margin on',...
%                                 'Unit', 'Normalized',...
%                                 'Position', [x_Button y w_Button h_Button], ...
%                                 'FontSize', 11, ...
%                                 'FontWeight', 'bold', ...
%                                 'BackgroundColor', BC_PB,...
%                                 'ForegroundColor', 'g', ...
%                                 'Visible', 'off', ...
%                                 'Callback', @Callback_Cine_Togglebutton_TumorMargin);

y = y - h_Gap-h_Button;
Comp.Pushbutton.SavePDF = uicontrol('parent', hPanel, ...
                                'Style', 'pushbutton',...
                                'String', 'Save PDF',...
                                'Unit', 'Normalized',...
                                'Position', [0.5 y 0.4 h_Button], ...
                                'FontSize', 11, ...
                                'FontWeight', 'bold', ...
                                'BackgroundColor', BC_PB,...
                                'ForegroundColor', 'c',...
                                'Enable', 'off', ...
                                'Callback', @Callback_Cine_Pushbutton_Measure_SavePDF);


w_Text = 0.3;
 x_Text = w_Button + h_Gap*5;
 
 x_Edit = w_Button + w_Text + h_Gap*6;
 w_Edit = (1-x_Edit) - h_Gap;
 
 Comp.Text.NoP = uicontrol('parent', hPanel, ...
                                'Style', 'text',...
                                'String', 'Avg. Points on each side',...
                                'Unit', 'Normalized',...
                                'Position', [x_Text y_Button(1) w_Text h_Button], ...
                                'HorizontalAlignment', 'center', ...
                                'FontSize', 9, ...
                                'FontWeight', 'bold', ...
                                'BackgroundColor', 'k',...
                                'ForegroundColor', 'w',...
                                'Visible', 'on');
                            
 Comp.Edit.NoP = uicontrol('parent', hPanel, ...
                                'Style', 'edit',...
                                'Unit', 'Normalized',...
                                'Position', [x_Edit y_Button(1) w_Edit h_Button],...
                                'FontSize', FS, ...
                                'FontWeight', 'bold', ...
                                'BackgroundColor', 'k',...
                                'ForegroundColor', 'g',...
                                'String', '10', ...
                                'Visible', 'on', ...
                                'Callback', @Callback_Cine_Edit_Measure_NoP);

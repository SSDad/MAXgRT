 function Comp = addComponents2Panel_Cine_Measure(hPanel)

 nButton = 4;
 h_Gap = 0.025;
 h_Button = (1-h_Gap*(nButton+1))/nButton;
 w_Button = 0.35;
 x_Button = h_Gap;
 
FS = 11;
BC_PB = [1 1 1]*0.25;

str{1} = 'Wave';
str{2} = 'Distance';
str{3} = '';

y = 1;
for n = 1:4%nButton
    y = y - h_Gap-h_Button;
    Comp.Radiobutton.Measure(n) = uicontrol('parent', hPanel, ...
                                'Style', 'radiobutton',...
                                'String', str{n},...
                                'Unit', 'Normalized',...
                                'Position', [x_Button y w_Button h_Button], ...
                                'FontSize', FS, ...
                                'FontWeight', 'bold', ...
                                'BackgroundColor', [1 1 1]*0.25,...
                                'ForegroundColor', 'c',...
                                'Value', 0, ...
                                'Visible', 'on', ...
                                'Tag', str{n}, ...
                                'Callback', @Callback_Cine_Radiobutton_Measure_);
    y_Button(n) = y;
end
Comp.Radiobutton.Measure(2).Enable = 'off';

% y = y - h_Gap-h_Button;
